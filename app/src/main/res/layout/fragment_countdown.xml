<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_game_loading_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GameView.Countdown.CountdownFragment" >

    <ScrollView
        android:id="@+id/scrollView_cons_game_loading_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_scrollView_game_loading_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_game_loading_fragment"
                style="@style/SejarahKitaTextView.Semibold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_secondary"
                android:letterSpacing="0.05"
                android:text="Batal"
                android:textAllCaps="false"
                android:textColor="@color/design_default_color_error"
                app:backgroundTint="@color/design_default_color_error"
                app:icon="@drawable/ic_close"
                app:iconGravity="textStart"
                app:iconTint="@color/design_default_color_error"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lbl_match_game_loading_fragment"
                style="@style/SejarahKitaTextView.Semibold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="16dp"
                android:text="%sMode"
                android:textAlignment="center"
                android:textColor="@color/textPrimary"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_cancel_game_loading_fragment"
                app:layout_constraintStart_toStartOf="@+id/btn_cancel_game_loading_fragment"
                app:layout_constraintTop_toBottomOf="@+id/btn_cancel_game_loading_fragment" />

            <TextView
                android:id="@+id/txt_subtitle_game_loading_fragment"
                style="@style/SejarahKitaTextView.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="GET READY"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/lbl_match_game_loading_fragment"
                app:layout_constraintStart_toStartOf="@+id/lbl_match_game_loading_fragment"
                app:layout_constraintTop_toBottomOf="@+id/lbl_match_game_loading_fragment" />

            <TextView
                android:id="@+id/lbl_countdown_game_loading_fragment"
                style="@style/SejarahKitaTextView.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:text="3"
                android:textColor="@color/textPrimary"
                android:textSize="64sp"
                app:layout_constraintEnd_toEndOf="@+id/txt_subtitle_game_loading_fragment"
                app:layout_constraintStart_toStartOf="@+id/txt_subtitle_game_loading_fragment"
                app:layout_constraintTop_toBottomOf="@+id/txt_subtitle_game_loading_fragment" />

            <ProgressBar
                android:id="@+id/progBar_countdown_game_loading_fragment"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                android:elevation="1dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/buttonPrimary"
                android:keepScreenOn="true"
                android:scaleY="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_countdown_game_loading_fragment" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>