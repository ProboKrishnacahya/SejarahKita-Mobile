<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_game_over_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_game_over_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_scrollView_game_over_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_title_game_over_layout"
                style="@style/SejarahKitaTextView.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Game Over ðŸ˜”"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_caption_game_over_layout"
                style="@style/SejarahKitaTextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yahh, nyawanya sudah habis.."
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintEnd_toEndOf="@+id/txt_title_game_over_layout"
                app:layout_constraintStart_toStartOf="@+id/txt_title_game_over_layout"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_game_over_layout" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_game_over_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/cardView"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_caption_game_over_layout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_game_over_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_total_skor_game_over_layout"
                        style="@style/SejarahKitaTextView.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Total Skor"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lbl_total_skor_game_over_layout"
                        style="@style/SejarahKitaTextView.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="32dp"
                        android:text="%sSkor"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="48sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/txt_total_skor_game_over_layout"
                        app:layout_constraintStart_toStartOf="@+id/txt_total_skor_game_over_layout"
                        app:layout_constraintTop_toBottomOf="@+id/txt_total_skor_game_over_layout" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_main_lagi_game_over_layout"
                style="@style/SejarahKitaTextView.Semibold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:background="@drawable/btn_primary"
                android:letterSpacing="0.05"
                android:text="Main Lagi"
                android:textAllCaps="false"
                android:textColor="@color/colorTextPrimary"
                app:icon="@drawable/ic_play_again"
                app:iconGravity="textStart"
                app:iconSize="26dp"
                app:iconTint="@color/colorTextPrimary"
                app:layout_constraintEnd_toEndOf="@+id/cv_game_over_layout"
                app:layout_constraintStart_toStartOf="@+id/cv_game_over_layout"
                app:layout_constraintTop_toBottomOf="@+id/cv_game_over_layout" />

            <TextView
                android:id="@+id/btn_lihat_leaderboard_game_over_layout"
                style="@style/SejarahKitaTextView.Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:drawablePadding="16dp"
                android:text="Lihat Leaderboard"
                android:textColor="@color/colorSecondary"
                app:drawableStartCompat="@drawable/ic_leaderboard"
                app:drawableTint="@color/colorSecondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btn_main_lagi_game_over_layout"
                app:layout_constraintStart_toStartOf="@+id/btn_main_lagi_game_over_layout"
                app:layout_constraintTop_toBottomOf="@+id/btn_main_lagi_game_over_layout" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>