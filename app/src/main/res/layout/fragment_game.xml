<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_game_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GameView.GameFragment">

    <ScrollView
        android:id="@+id/scrollView_game_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_scrollView_game_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ill_game_fragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/cardSecondary"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_ill_game_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/txt_title1_game_fragment"
                            style="@style/SejarahKitaTextView.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belajar Jadi"
                            android:textColor="@color/textPrimary" />

                        <TextView
                            android:id="@+id/txt_title2_game_fragment"
                            style="@style/SejarahKitaTextView.Semibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lebih Seru ðŸ‘Œ"
                            android:textColor="@color/highlight" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_ill_game_fragment"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ill_game" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/divider1_game_fragment"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="@+id/txt_subtitle_game_fragment"
                app:layout_constraintEnd_toStartOf="@+id/txt_subtitle_game_fragment"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_subtitle_game_fragment" />

            <TextView
                android:id="@+id/txt_subtitle_game_fragment"
                style="@style/SejarahKitaTextView.Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Main Sekarang"
                android:textColor="@color/textPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_ill_game_fragment" />

            <View
                android:id="@+id/divider2_game_fragment"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="@+id/txt_subtitle_game_fragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_subtitle_game_fragment"
                app:layout_constraintTop_toTopOf="@+id/txt_subtitle_game_fragment" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ranked_game_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/cardSecondary"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_subtitle_game_fragment">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_ranked_game_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linearLayout_ranked_game_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/txt_title_ranked_game_fragment"
                            style="@style/SejarahKitaTextView.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ranked Mode"
                            android:textColor="@color/textPrimary" />

                        <TextView
                            android:id="@+id/txt_subtitle_ranked_game_fragment"
                            style="@style/SejarahKitaTextView.Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menangkan permainan dan dapatkan Ranked Point"
                            android:textColor="@color/textPrimary" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_easy_game_fragment"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="@color/easy1"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="1dp"
                        app:cardPreventCornerOverlap="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout_ranked_game_fragment">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cons_cv_easy_game_fragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txt_title_easy_game_fragment"
                                style="@style/SejarahKitaTextView.Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Easy"
                                android:textColor="@color/textPrimary"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/img_ill_nyawa_easy_game_fragment"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_marginTop="16dp"
                                android:src="@drawable/ic_life"
                                app:layout_constraintEnd_toEndOf="@+id/txt_title_easy_game_fragment"
                                app:layout_constraintStart_toStartOf="@+id/txt_title_easy_game_fragment"
                                app:layout_constraintTop_toBottomOf="@+id/txt_title_easy_game_fragment" />

                            <TextView
                                android:id="@+id/textView10"
                                style="@style/SejarahKitaTextView.Semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textColor="@color/textPrimary"
                                app:layout_constraintBottom_toBottomOf="@+id/img_ill_nyawa_easy_game_fragment"
                                app:layout_constraintEnd_toEndOf="@+id/img_ill_nyawa_easy_game_fragment"
                                app:layout_constraintStart_toStartOf="@+id/img_ill_nyawa_easy_game_fragment"
                                app:layout_constraintTop_toTopOf="@+id/img_ill_nyawa_easy_game_fragment" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_easy_game_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:src="@drawable/ic_enter"
                                android:tint="@color/textSecondary"
                                app:backgroundTint="@color/buttonSecondary"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/img_ill_nyawa_easy_game_fragment"
                                app:layout_constraintStart_toStartOf="@+id/img_ill_nyawa_easy_game_fragment"
                                app:layout_constraintTop_toBottomOf="@+id/img_ill_nyawa_easy_game_fragment"
                                app:maxImageSize="32dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_hard_game_fragment"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="@color/hard2"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="1dp"
                        app:cardPreventCornerOverlap="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout_ranked_game_fragment">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cons_cv_hard_game_fragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txt_title_hard_game_fragment"
                                style="@style/SejarahKitaTextView.Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Hard"
                                android:textColor="@color/textPrimary"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/img_ill_nyawa_hard_game_fragment"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_marginTop="16dp"
                                android:src="@drawable/ic_life"
                                app:layout_constraintEnd_toEndOf="@+id/txt_title_hard_game_fragment"
                                app:layout_constraintStart_toStartOf="@+id/txt_title_hard_game_fragment"
                                app:layout_constraintTop_toBottomOf="@+id/txt_title_hard_game_fragment" />

                            <TextView
                                android:id="@+id/textView11"
                                style="@style/SejarahKitaTextView.Semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/textPrimary"
                                app:layout_constraintBottom_toBottomOf="@+id/img_ill_nyawa_hard_game_fragment"
                                app:layout_constraintEnd_toEndOf="@+id/img_ill_nyawa_hard_game_fragment"
                                app:layout_constraintStart_toStartOf="@+id/img_ill_nyawa_hard_game_fragment"
                                app:layout_constraintTop_toTopOf="@+id/img_ill_nyawa_hard_game_fragment" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_hard_game_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:clickable="true"
                                android:src="@drawable/ic_enter"
                                android:tint="@color/textSecondary"
                                app:backgroundTint="@color/buttonSecondary"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/img_ill_nyawa_hard_game_fragment"
                                app:layout_constraintStart_toStartOf="@+id/img_ill_nyawa_hard_game_fragment"
                                app:layout_constraintTop_toBottomOf="@+id/img_ill_nyawa_hard_game_fragment"
                                app:maxImageSize="32dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_casual_game_fragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@color/casual"
                app:cardCornerRadius="7.5dp"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cv_ranked_game_fragment"
                app:layout_constraintStart_toStartOf="@+id/cv_ranked_game_fragment"
                app:layout_constraintTop_toBottomOf="@+id/cv_ranked_game_fragment">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_casual_game_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linearLayout_casual_game_fragment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/imageView6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/txt_title_casual_game_fragment"
                            style="@style/SejarahKitaTextView.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Casual Mode"
                            android:textColor="@color/background" />

                        <TextView
                            android:id="@+id/txt_subtitle_casual_game_fragment"
                            style="@style/SejarahKitaTextView.Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:text="Bermain dengan santai tanpa pengaruhi Ranked Pointmu"
                            android:textColor="@color/background" />

                    </LinearLayout>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_casual_game_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_enter"
                        android:tint="@color/textSecondary"
                        app:backgroundTint="@color/buttonSecondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:maxImageSize="32dp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/ill_casual"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fab_casual_game_fragment" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>