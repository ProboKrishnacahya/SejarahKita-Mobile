<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SejarahKitaMobile" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/buttonPrimary</item>
        <item name="colorOnPrimary">@color/buttonPrimary</item>
        <item name="colorSecondary">@color/buttonSecondary</item>
        <item name="colorSecondaryVariant">@color/buttonSecondary</item>
        <item name="colorOnSecondary">@color/textPrimary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/footer</item>
    </style>

    <!-- Rating Bar Nyawa Ranked Mode -->
    <style name="ImageRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_nyawa</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">47dp</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>